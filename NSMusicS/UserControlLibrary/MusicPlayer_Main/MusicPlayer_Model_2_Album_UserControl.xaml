        <viewmodel_control:ScrollViewerAnimation  
            x:Name="ScrollViewer_Albums" Margin="50,77,0,77"
            HorizontalScrollBarVisibility="Disabled">
            <ItemsControl 
                x:Name="ItemsControl_AlbumList" 
                Background="{x:Null}" BorderThickness="0"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling"
                Grid.Row="1" 
                ItemsSource="{Binding Assembly_Album_Show_s}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel 
                            VirtualizingStackPanel.IsVirtualizing="True"
                            VirtualizingStackPanel.VirtualizationMode="Recycling">
                             
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:TransitioningContent OpeningEffect="{Binding Effact}">
                            <VirtualizingStackPanel 
                                VirtualizingStackPanel.IsVirtualizing="True"
                                VirtualizingStackPanel.VirtualizationMode="Recycling"
                                Orientation="Vertical">
                                <Border 
                                    Width="{Binding Width}" Height="{Binding Height}" 
                                    Background="{Binding Album_Image}" 
                                    Tag="{Binding Album_No}"
                                    Margin="{Binding Margin}"
                                    BorderBrush="{x:Null}" CornerRadius="12">

                                </Border>
                                <TextBlock
                                     Text="{Binding Album_Name}" Foreground="White" FontSize="14" MaxWidth="120"
                                     HorizontalAlignment="Center" VerticalAlignment="Top" 
                                     Margin="0,10,0,0" TextTrimming="WordEllipsis">

                                </TextBlock>
                                <TextBlock
                                     Text="{Binding Album_Explain}" Foreground="White" FontSize="12" MaxWidth="120"
                                     HorizontalAlignment="Center" VerticalAlignment="Top" 
                                     Margin="0,3,0,13" TextTrimming="WordEllipsis">

                                </TextBlock>
                            </VirtualizingStackPanel>
                        </materialDesign:TransitioningContent>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ScrollViewer.Resources>
                <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">10</system:Double>
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="10"/>
                    <Setter Property="Template" Value="{DynamicResource MyScrollBar}"/>
                </Style>
            </ScrollViewer.Resources>
        </viewmodel_control:ScrollViewerAnimation>
